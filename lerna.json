{
    "version": "0.1.0",
    "npmClient": "yarn",
    
    "command": {
      "publish": {
        "ignoreChanges": ["ignored-file", "*.md"],
        "message": "chore(release): publish",
        "registry": "http://registry.npmjs.org/gearware"
        // "registry": "https://npm.pkg.github.com"
      },
      "bootstrap": {
        "ignore": "component-*",
        "npmClientArgs": ["--no-package-lock"]
      }
    },
    "packages": ["packages/*"]
  }